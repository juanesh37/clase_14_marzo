SQLPLUS / AS SYSDBA   // INICIAR EL SQLPLUS

CREATE TABLESPACE ITM DATAFILE 'DATAFILEITM' SIZE 300M;

create user AMARTINEZ
IDENTIFIED BY AMARTINEZ
DEFAULT TABLESPACE ITM
QUOTA UNLIMITED ON ITM;

SQL DEVELOPER -> NUEVA CONEXION
SQL PLUS -> ABRIR OTRA TERMINAL Y EJECUTAR SQLPLUS AMARTINEZ/AMARTINEZ // PARA INICIAR SESION CON EL USUARIO RECIEN CREADO

//PARA DARLE PERMISOS DE CONECXION AL USUARIO
GRANT CREATE SESSION TO AMARTINEZ;
GRANT CONNECT TO AMARTINEZ;

GRANT CREATE TABLE TO AMARTINEZ;
CREATE TABLE PRUEBA (VARCHAR(255));

//CREAR UN SEGUNDO USUARIO EN EL MISMO TABLESPACE DEL USUARIO 1
CREATE USER JUANES
IDENTIFIED BY JUANES
DEFAULT TABLESPACE ITM
QUOTA UNLIMITED ON ITM;

//CREAR UN ROLE QUE TENGA LOS PERMISOS DE CREAR SESIÃ“N Y CREAR TABLA
CREATE ROLE CLASE;
GRANT CREATE SESSION, CREATE TABLE TO CLASE;

//CONSULTO QUE PRIVILEGIOS TIENE UN ROL O UN USUARIO
//GRANTEE = PERSONA O ROL QUE TIENE XX PRIVILEGIO
SELECT GRANTEE, PRIVILEGE FROM dba_sys_privs WHERE GRANTEE= 'CLASE' OR GRANTEE='AMARTINEZ'

//MOSTRAR TODOS LOS PRIVILEGIOS DEL ROLE 'DBA'
SELECT * FROM DBA_SYS_PRIVS WHERE GRANTEE='DBA';
